{
    "name": "colours/codebeast",
    "description": "Composer package used to generate git hooks for automating code quality control",
    "type": "library",
    "require": {
        "php": ">=7.0",
        "symfony/console": ">=2.7",
        "phpmd/phpmd" : "@stable",
        "squizlabs/php_codesniffer": "3.*",
        "drupal/coder": "^8.2.12",
        "dealerdirect/phpcodesniffer-composer-installer": "*"
    },
    "require-dev": {
        "composer/composer": "~1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "EugeneZenko\\CodeBeast\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Yauhen Zenko",
            "email": "yauhen.zenko@gmail.com"
        }
    ],
    "bin": [
        "codebeast"
    ],
    "minimum-stability": "dev",
    "suggest": {
        "your git hooks": "run 'vendor/bin/codebeast configure' to set up your hook configuration"
    }
}
